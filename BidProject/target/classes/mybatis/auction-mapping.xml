<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="auctionMapper">
	<select id="view" parameterType="java.lang.String" resultType="auctionVO">
		<![CDATA[
			SELECT * FROM SALES WHERE CODE = #{code}
		]]>
	</select>
	
	<insert id="bidPlace" parameterType="java.lang.Integer">
		<![CDATA[
			INSERT INTO AUCTION(CODE, FINALPRICE, TERM)
			VALUES (#{code}, #{finalPrice}, #{term})
		]]>
	</insert>
	
