<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardNameSpace">
	<select id="boardlist" resultType="boardDto" parameterType="Integer">
		<![CDATA[
			SELECT SEQ,ID,NAME,EMAIL,SUBJECT,CONTENT,REF,LEV,STEP,PSEQ,REPLY,HIT,TO_CHAR(LOGTIME,'YYYY.MM.DD')AS LOGTIME FROM (SELECT ROWNUM RN, AA.* FROM(SELECT * FROM BOARD ORDER BY REF DESC,STEP ASC)AA) WHERE RN>=#{pg}*10-4 AND RN<=#{pg}*10
		]]>
	</select>
	
		<select id="insert" parameterType="boardDto">
		<![CDATA[
			INSERT INTO BOARD VALUES(SEQ_BOARD.NEXTVAL,#{id}, #{name}, #{email},#{subject}, #{content},seq_board.currval,0,0,0,0,0,SYSDATE)
		]]>
	</select>
	
	<select id="boardView" parameterType="boardDto" resultType="boardDto">
		<![CDATA[
			SELECT * FROM BOARD WHERE SEQ=#{seq}
		]]>
	</select>
	<select id="modify" parameterType="boardDto" resultType="boardDto">
		<![CDATA[
			SELECT * FROM BOARD WHERE SEQ=#{seq}
		]]>
	</select>
	
	<select id="update" parameterType="boardDto" resultType="boardDto">
		<![CDATA[
			UPDATE BOARD SET SUBJECT=#{subject},CONTENT=#{content} WHERE SEQ=#{seq}
		]]>
	</select>
	
	<update id="updatehit" parameterType="Integer">
		<![CDATA[
			UPDATE BOARD SET HIT=HIT+1 WHERE SEQ=#{seq}
		]]>
	</update>
	
	
	
	
	<select id="delete" resultType="boardDto">
		<![CDATA[
			DELETE BOARD WHERE SEQ=#{seq}
		]]>
	</select>
	
	<select id="getTotal" resultType="Integer">
		<![CDATA[
			SELECT COUNT(*) FROM BOARD
		]]>
	</select>
	
	
	
</mapper>