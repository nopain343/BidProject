<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="test04/jdbc.properties"/>
	<environments default="dev">
		<environment id="dev">
			<transactionManager type="JDBC"/> 	<!-- JDBC:커밋과 롤백을 수동/ MANAGED:자동커밋 -->
			<dataSource type="POOLED"> 	<!-- UNPOOLED:매번 커넥션을 열고 닫음, POOLED:한번만 열고 닫음, JNDI -->
				<property name="driver"   value="${driver}"/>
				<property name="url" 	  value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>

	<!-- SQL 쿼리문 -->
	<mappers>
		<mapper resource="/user-mapping.xml"/> <!-- SQL문장이 기술되는 Mapper 파일 -->
	</mappers>
</configuration>