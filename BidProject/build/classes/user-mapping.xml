<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.goodsMapper">	<!-- namespace: 이름공간 -->
	<select id="listGoods" resultType="test04.GoodsEntity">
		<![CDATA[
			SELECT * FROM GOODSINFO
		]]>
	</select>
	
	<insert id="insertGoods" parameterType="test04.GoodsEntity">
		<![CDATA[
			INSERT INTO GOODSINFO(CODE, NAME, PRICE, MAKER)
			VALUES (#{code}, #{name}, #{price}, #{maker})
		]]>
	</insert>
	
	<select id="findsGoods" parameterType="java.lang.String" resultType="test04.GoodsEntity">
		<![CDATA[
			SELECT * FROM GOODSINFO
			WHERE CODE = #{code}
		]]>
	</select>
	
	<delete id="deleteGoods" parameterType="java.lang.String">
		<![CDATA[
			DELETE FROM GOODSINFO
			WHERE NAME = #{name}
		]]>
	</delete>
	
	<update id="updateGoods" parameterType="test04.GoodsEntity">
		<![CDATA[
			UPDATE GOODSINFO SET
			NAME = #{name}, PRICE = #{price}, MAKER = #{maker}
			WHERE CODE = #{code}
		]]>
	</update>
	
	<select id="selectGoodsByCodeAndPriceAndMaker" parameterType="hashmap" resultType="test04.GoodsEntity">
		<![CDATA[
			SELECT * FROM GOODSINFO
			WHERE CODE LIKE #{code} AND PRICE < #{price} AND MAKER = #{maker}
		]]>
	</select>
</mapper>